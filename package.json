{
  "name": "cv-with-nuxt",
  "license": "MIT",
  "engines": {
    "node": ">=12.15.0"
  },
  "scripts": {
    "audit:packages": "yarn install --audit",
    "build": "nuxt build",
    "clear": "yarn test --clearCache",
    "dev": "yarn outdated & yarn dev:offline",
    "dev:offline": "nuxt",
    "generate": "nuxt generate --fail-on-error",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "start": "nuxt start",
    "start:static": "yarn http-server -p 3000 ./dist",
    "test": "jest --config ./config/jest.config.js",
    "test:coverage": "yarn test --coverage",
    "test:watch": "yarn test --watch",
    "validate:lighthouse": "yarn lhci autorun --config=./config/lighthouserc.js",
    "validate:pages": "node scripts/validate_pages.js",
    "vercel-build": "yarn generate"
  },
  "dependencies": {
    "@nuxtjs/robots": "^2.4.2",
    "@nuxtjs/sitemap": "^2.4.0",
    "@nuxtjs/tailwindcss": "^2.0.0",
    "nuxt": "^2.13.3",
    "nuxt-i18n": "^6.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@lhci/cli": "^0.4.2",
    "@nuxt/typescript-build": "^2.0.0",
    "@nuxtjs/eslint-config-typescript": "^2.0.0",
    "@types/jest": "^26.0.4",
    "@vue/test-utils": "^1.0.3",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^6.2.2",
    "html-validator": "^5.1.14",
    "http-server": "^0.12.3",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^10.2.11",
    "mock-fs": "^4.10.1",
    "pa11y": "^5.3.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "vue-jest": "^3.0.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --cache --fix"
  }
}
